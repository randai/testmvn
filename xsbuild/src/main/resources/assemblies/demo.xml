<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>demo</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>xs-${project.version}/</outputDirectory>
			<directory>../xsds/target/dist</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	    		<fileSet>
			<outputDirectory>xs-${project.version}/</outputDirectory>
			<directory>../xsmm/target/dist</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>xs-${project.version}/</outputDirectory>
			<directory>../xsrv/target/dist</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>xs-${project.version}/bin</outputDirectory>
			<fileMode>755</fileMode>
			<directory>src/main/exe</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>xs-${project.version}/xsrv/demo</outputDirectory>
			<directory>src/main/resources/xsrv/demo</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>xs-${project.version}/xsrv/barx</outputDirectory>
			<directory>src/main/resources/xsrv/barx</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>xs-${project.version}/xsrv/cnx</outputDirectory>
			<directory>src/main/resources/xsrv/cnx</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>
